<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>All Cocktails</h1>

        <%= link_to 'New cocktail', new_cocktail_path, class: 'btn btn-primary' %>

        <ul>
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
          <div class="card text-center">

          <% if cocktail.picture %>
            <div class="card-header" style="background-image: url('<%= image_path cocktail.picture%>')">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
            </div>
          <% end %>
          <div class="card-body">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
    <% end %>
      </ul>
              <%= cl_image_tag("g5nmq8lk7vo8bu1qnsii",
      width: 400, height: 300, crop: :fill) %>


    </div>
  </div>
</div>


